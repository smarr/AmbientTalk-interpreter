# Log4J Properties for AmbientTalk/2

# print eventloop-related information to the console

log4j.logger.at.eventloops=DEBUG, console
log4j.logger.at.init=INFO, console

log4j.appender.console=org.apache.log4j.ConsoleAppender
log4j.appender.console.layout=org.apache.log4j.PatternLayout
log4j.appender.console.target=System.err

# see http://logging.apache.org/log4j/docs/api/org/apache/log4j/PatternLayout.html
# for a listing of possible pattern variables
# d = date, t = thread, p = priority, c = category, m = message, n = newline
# apparently in the CDC version of Log4J, the conversion date pattern is ignored
#log4j.appender.console.layout.ConversionPattern=%d{HH:mm:ss} %-5p %c - %m%n
log4j.appender.console.layout.ConversionPattern=%d %-5p %c - %m%n

# JGroups output can be configured here
log4j.logger.org.jgroups=ERROR, console